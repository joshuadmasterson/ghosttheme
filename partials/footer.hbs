<footer class="footer is-centered">
    <div class="container">
        <div class="columns">
            <div class="column">
                {{#get "posts" limit="5" as |recent|}}
                <section class="recent-posts">
                    <h3>Recent Posts</h3>
                    <ul>
                        {{#foreach recent}}
                        <li>
                            <a href="{{url}}">{{title}}</a>
                        </li>
                        {{/foreach}}
                    </ul>
                </section>
                {{/get}}
            </div>
            <div class="column">
                {{#get "tags" limit="10" as |tag|}}
                <section class="recent-posts">
                    <h3>Tags</h3>
                    <ul>
                        {{#foreach tag}}
                        <li>
                            <a class="tag" href="{{url}}">{{name}}</a>
                        </li>
                        {{/foreach}}
                    </ul>
                </section>
                {{/get}}
            </div>
        </div>
    </div>
</footer>